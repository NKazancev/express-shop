generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum OrderStatus {
  PENDING
  ACCEPTED
  OUT_FOR_DELIVERY
  DELIVERED
  CANCELLED
}

model User {
  id                String          @id @default(cuid())
  email             String          @unique
  password          String
  username          String          @unique
  role              Role            @default(USER)
  cartProducts      CartProduct[]
  orders            Order[]
  reviews           ProductReview[]
  address           Address?
}

model Product {
  id                String          @id @default(cuid())
  name              String          @unique
  price             Int
  description       String
  image             String
  typeId            String
  brandId           String
  stock             Int             @default(1)
  type              ProductType     @relation(fields: [typeId], references: [id])
  brand             ProductBrand    @relation(fields: [brandId], references: [id])
  gallery           ProductGallery?
  info              ProductInfo?
  cartProducts      CartProduct[]
  orderProducts     OrderProduct[]
  reviews           ProductReview[]
}

model ProductType {
  id                String          @id @default(cuid())
  name              String          @unique
  products          Product[]
}

model ProductBrand {
  id                String          @id @default(cuid())
  name              String          @unique
  products          Product[]
}

model ProductGallery {
  id                String          @id @default(cuid())
  images            String[]
  productId         String          @unique
  product           Product         @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model ProductInfo {
  id                String            @id @default(cuid())
  text              String
  productId         String            @unique
  product           Product           @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model ProductReview {
  id                String            @id @default(cuid())
  title             String
  text              String
  rate              Decimal            
  productId         String
  userId            String
  product           Product           @relation(fields: [productId], references: [id], onDelete: Cascade)
  user              User              @relation(fields: [userId], references: [id])
}

model CartProduct {
  id                String          @id @default(cuid())
  quantity          Int
  productId         String
  userId            String
  product           Product         @relation(fields: [productId], references: [id], onDelete: Cascade)
  user              User            @relation(fields: [userId], references: [id])
}

model DeliveryCountry {
  id                String          @id @default(cuid())
  name              String          @unique
  cities            DeliveryCity[]
}

model DeliveryCity {
  id                String          @id @default(cuid())
  name              String
  countryId         String
  country           DeliveryCountry @relation(fields: [countryId], references: [id])
}

model Order {
  id                String          @id @default(cuid())
  netAmount         Int
  customer          String
  address           String
  contactInfo       String
  status            OrderStatus     @default(PENDING)
  userId            String
  user              User            @relation(fields: [userId], references: [id])
  products          OrderProduct[]
  createdAt         DateTime        @default(now())
}

model OrderProduct {
  id                String          @id @default(cuid())
  quantity          Int
  productId         String
  orderId           String
  product           Product         @relation(fields: [productId], references: [id], onDelete: Cascade)
  order             Order           @relation(fields: [orderId], references: [id], onDelete: Cascade)
}

model Address {
  id                String          @id @default(cuid())
  countryId         String
  cityId            String
  street            String
  postcode          String
  userId            String          @unique
  user              User            @relation(fields: [userId], references: [id])  
}