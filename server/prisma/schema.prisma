generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id                String          @id @default(cuid())
  email             String          @unique
  password          String
  role              Role            @default(USER)
  cartProducts      CartProduct[]
  reviews           ProductReview[]
}

model Product {
  id                String          @id @default(cuid())
  name              String          @unique
  price             Int
  description       String
  image             String
  typeId            String
  brandId           String
  type              ProductType     @relation(fields: [typeId], references: [id])
  brand             ProductBrand    @relation(fields: [brandId], references: [id])
  gallery           ProductGallery?
  info              ProductInfo?
  cartProducts      CartProduct[]
  reviews           ProductReview[]
}

model ProductType {
  id                String          @id @default(cuid())
  name              String          @unique
  products          Product[]
}

model ProductBrand {
  id                String          @id @default(cuid())
  name              String          @unique
  products          Product[]
}

model ProductGallery {
  id                String          @id @default(cuid())
  images            String[]
  productId         String          @unique
  product           Product         @relation(fields: [productId], references: [id])
}

model ProductInfo {
  id              String            @id @default(cuid())
  text            String
  productId       String            @unique
  product         Product           @relation(fields: [productId], references: [id])
}

model ProductReview {
  id              String            @id @default(cuid())
  title           String
  text            String
  userId          String
  productId       String
  author          User              @relation(fields: [userId], references: [id])
  product         Product           @relation(fields: [productId], references: [id])
  rating          ProductRating?
}

model ProductRating {
  id              String            @id @default(cuid())
  value           Decimal
  reviewId        String            @unique
  review          ProductReview     @relation(fields: [reviewId], references: [id])
}

model CartProduct {
  id                String          @id @default(cuid())
  quantity          Int
  productId         String
  userId            String
  product           Product         @relation(fields: [productId], references: [id])
  user              User            @relation(fields: [userId], references: [id])
}