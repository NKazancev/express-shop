generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum OrderStatus {
  PENDING
  ACCEPTED
  OUT_FOR_DELIVERY
  DELIVERED
  CANCELLED
}

model User {
  id                String          @id @default(cuid())
  email             String          @unique
  password          String
  role              Role            @default(USER)
  cartProducts      CartProduct[]
  orders            Order[]
  reviews           ProductReview[]
}

model Product {
  id                String          @id @default(cuid())
  name              String          @unique
  price             Int
  description       String
  image             String
  typeId            String
  brandId           String
  type              ProductType     @relation(fields: [typeId], references: [id])
  brand             ProductBrand    @relation(fields: [brandId], references: [id])
  gallery           ProductGallery?
  info              ProductInfo?
  cartProducts      CartProduct[]
  orderProducts     OrderProduct[]
  reviews           ProductReview[]
}

model ProductType {
  id                String          @id @default(cuid())
  name              String          @unique
  products          Product[]
}

model ProductBrand {
  id                String          @id @default(cuid())
  name              String          @unique
  products          Product[]
}

model ProductGallery {
  id                String          @id @default(cuid())
  images            String[]
  productId         String          @unique
  product           Product         @relation(fields: [productId], references: [id])
}

model ProductInfo {
  id              String            @id @default(cuid())
  text            String
  productId       String            @unique
  product         Product           @relation(fields: [productId], references: [id])
}

model ProductReview {
  id              String            @id @default(cuid())
  title           String
  text            String
  rate            Decimal            
  productId       String
  userId          String
  product         Product           @relation(fields: [productId], references: [id])
  user            User              @relation(fields: [userId], references: [id])
}

model CartProduct {
  id                String          @id @default(cuid())
  quantity          Int
  productId         String
  userId            String
  product           Product         @relation(fields: [productId], references: [id])
  user              User            @relation(fields: [userId], references: [id])
}

model DeliveryCountry {
  id                String          @id @default(cuid())
  name              String          @unique
  cities            DeliveryCity[]
}

model DeliveryCity {
  id                String          @id @default(cuid())
  name              String
  countryId         String
  country           DeliveryCountry @relation(fields: [countryId], references: [id])
}

model Order {
  id                String          @id @default(cuid())
  netAmount         Int
  customer          String
  address           String
  status            OrderStatus     @default(PENDING)
  userId            String
  user              User            @relation(fields: [userId], references: [id])
  products          OrderProduct[]
}

model OrderProduct {
  id                String          @id @default(cuid())
  quantity          Int
  productId         String
  orderId           String
  product           Product         @relation(fields: [productId], references: [id])
  order             Order           @relation(fields: [orderId], references: [id])
}